<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Coffee" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.Activity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        -->
    </style>

    <style name="ButtonLoginWithGoogle" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/google_icon</item>
        <item name="iconSize">20dp</item>
        <item name="iconTint">@null</item>
        <item name="cornerRadius">50dp</item>
        <item name="fontFamily">@font/manrope_semibold</item>
        <item name="backgroundTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#212121</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonLoginWithFacebook" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/facebook_icon</item>
        <item name="iconSize">20dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="iconTint">@null</item>
        <item name="fontFamily">@font/manrope_semibold</item>
        <item name="backgroundTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#212121</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="cornerRadius">50dp</item>
        <item name="iconTint">@null</item>
        <item name="fontFamily">@font/manrope_semibold</item>
        <item name="backgroundTint">#E3B37A</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#212121</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonEnabled" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@null</item>
        <item name="fontFamily">@font/manrope_semibold</item>
        <item name="backgroundTint">#E3B37A</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#212121</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="ButtonLogout" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="cornerRadius">30dp</item>
        <item name="iconTint">@null</item>
        <item name="strokeColor">#ff3333</item>
        <item name="strokeWidth">1dp</item>
        <item name="fontFamily">@font/manrope_extrabold</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#ff3333</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonDisable" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@null</item>
        <item name="fontFamily">@font/manrope_semibold</item>
        <item name="backgroundTint">#AAAAAA</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetThemeOrder" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.1</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_top</item>
    </style>

    <style name="CustomText">
        <item name="android:fontFamily">@font/manrope_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/primaryColor</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/primaryColor</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/manrope_semibold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="LabelStyle">
        <item name="android:background">@drawable/bg_label</item>
        <item name="android:textColor">#FFF</item>
        <item name="fontFamily">@font/manrope_regular</item>
    </style>
</resources>